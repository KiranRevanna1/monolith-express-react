{
  "version": 2,
  "builds": [
    {
      "src": "build-server/index.js",
      "use": "@now/node-server"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
          "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "build-server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "build/404.html"
    }
  ]
}
